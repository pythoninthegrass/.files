alias uwssh1404="ssh -4 -i ~/.ssh/id_rsa -Y adsparad@ubuntu1404.student.cs.uwaterloo.ca"
alias uwssh1604="ssh -4 -i ~/.ssh/id_rsa -Y adsparad@ubuntu1604.student.cs.uwaterloo.ca"
